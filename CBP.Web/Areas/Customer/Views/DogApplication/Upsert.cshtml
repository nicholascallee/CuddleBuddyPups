                            <span asp-validation-for="@(Model.DogApplication.DogId)" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@(Model.DogApplication.Name)" class="form-control border-0 shadow" />
